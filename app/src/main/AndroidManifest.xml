<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nicdsmith.test.gamenight">

    <application
        android:name=".EventRotations"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventCreationActivity"
            android:label="@string/title_activity_event_creation"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FirstTimeLogIn"
            android:label="@string/title_activity_first_time_log_in"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".EventInformationViewer"
            android:label="@string/title_activity_event_information_viewer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
